/* Join Section and Footer - Page 3 */
    .page-three {
/*        min-height: 100vh;*/
        display: flex;
        flex-direction: column;
        background: transparent;
    }

    .join-section {
        padding: 4rem 2rem;
        text-align: center;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .join-buttons {
        margin-top: 2rem;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .share-btn {
        background: transparent;
        border: 1px solid #000;
        color: #000;
        padding: 0.5rem 1rem;
        cursor: pointer;
        border-radius: 4px;
    }

/* Footer */
    footer {
        background: transparent;
        padding: 2rem 0rem 0rem 0rem;
    }

    .footer-links {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }

    .link-column h4 {
        margin-bottom: 1rem;
    }

    .link-column a {
        display: block;
        color: #666;
        text-decoration: none;
        margin-bottom: 0.5rem;
    }

    .footer-bottom {
        background: #2c2c2c;
/*        margin-top: 3rem;*/
        padding: 1rem 1rem 0rem 1rem;
        border-top: 1px solid #ddd;
        display: flex;
        justify-content: space-between;
        color: #aaa;
        font-size: 0.9rem;
    }

    .footer-bottom-links {
        display: flex;
        justify-content: space-between;
        gap: 2rem;
    }

    .footer-bottom-links a {
        padding: 0.6rem 2rem 0rem 0rem;
        color: #aaa;
        text-decoration: none;
    }

/* Smooth Scrolling */
    html {
        scroll-behavior: smooth;
    }


/* Responsiveness*/
    @media (max-width: 768px) {
        .hero {
            flex-direction: column;
            text-align: center;
        }

        .hero-text {
            max-width: 100%;
            margin-bottom: 20px;
        }

        .hero-image {
            max-width: 100%;
        }
    }

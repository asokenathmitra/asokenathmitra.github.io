body {
    margin: 0px;
}

.bg-color-layer {
    position: fixed; 

    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #A0A0A0; /* #624664; /* #554156*/
    opacity: 0.88;
    z-index: -10; 
    margin: 0px;
    padding: 0px;
}


.background {
    position: fixed; /* Ensures it stays behind content */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding-left: 10rem;
    background-image: url("../images/bgFinal.jpg");\
    opacity: 1;
/*    background-repeat: no-repeat;*/
    background-size: cover;
    background-position: center;
    filter: blur(2px);
    z-index: -100; /* Places it behind other content */
}


/* Hero text */
    .hero {
        display: flex;
        /*background-color: #554156;*/
        justify-content: space-between;
        align-items: center;
        padding: 20px 20px; 
        margin: 60px 100px;
        color: black;
    }

    .hero-text {
        max-width: 50%;
        text-align: left;
        padding-left: 50px;
        padding-right: 25px;
        /*align-items: right;*/
        /*align-content: right;*/
    }

    .hero-text h1 {
        font-size: 72px; /*56*/
        font-family: "Lora";
        font-weight: normal;
        margin-bottom: 20px;
        padding-bottom: 25px;
    }

    .hero-text p {
        /*margin-bottom: 20px;*/
        font-family: "Krub";
        font-size: 22px;
        /*text-align: right;*/
    }

    .hero-text .buttons {
        display: flex;
        gap: 15px;
        border-color: black;
        border-width: 5px;
        justify-content: flex-start;
    }

    .hero-text .buttons a {
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 30px;
        font-family: "Krub";
        font-size: 26px;
        font-weight: normal;
    }

    .hero-text .buttons .type1 {
        background-color: #000;
        color: #fff;
    }

    .hero-text .buttons .type2 {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        color: #333;
    }

    .hero-image {
        /*max-width: 40%;*/ /*40*/
        padding: 25px;
        padding-left: 0px;
        padding-right: 50px;
    }

    .hero-image img {
        width: 35vw;
        border-radius: 500px; /*30px*/
        background-image: radial-gradient(circle 50vh at 50% 100%, #a0a0a0, #a0a0a0);
        /*background-image: radial-gradient(circle closest-side, #a0a0a0, #a0a0a0);*/
        /*border: 1px solid #333;*/
        /*box-shadow: 0px 0px 5rem #ab9b82, inset 0px 0px 5rem #ab9b82;*/
        opacity: 0.75;
    }

